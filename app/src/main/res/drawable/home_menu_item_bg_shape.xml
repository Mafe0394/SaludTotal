    <!-- White Top color -->
    <item android:top="@dimen/_4dp">

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@color/item_nav_box" />
        </shape>

    </item>
</layer-list>