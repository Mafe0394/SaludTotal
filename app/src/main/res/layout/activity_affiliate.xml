<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".register.AffiliateActivity"
    android:theme="@style/StartScreenTheme">
    <data>
        <variable
            name="viewmodel"
            type="com.wigilabs.saludtotal.register.AffiliateViewModel" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <include
            android:id="@+id/ActionBar_r"
            layout="@layout/action_bar"/>

        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_20dp">
                <TextView
                    android:id="@+id/lbNombres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lb_nombres"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/colorText1"
                    android:autofillHints="@null"
                    tools:targetApi="o" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/lbNombres"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/endBlueGradient"
                    android:text="@string/lb_affiliate_required_field"
                    android:autofillHints="@null"
                    tools:targetApi="o" />
                <EditText
                    android:id="@+id/et_Nombres"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    app:layout_constraintTop_toBottomOf="@id/lbNombres"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/edit_text_shape"
                    android:hint="@string/et_nombres"
                    android:textSize="@dimen/_12sp"
                    android:layout_marginTop="@dimen/_6dp"
                    android:paddingHorizontal="@dimen/_17dp"
                    android:inputType="textPersonName"
                    android:elevation="@dimen/_4dp"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>

                <TextView
                    android:id="@+id/lbApellidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lb_apellidos"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_Nombres"
                    android:layout_marginTop="@dimen/_17dp"
                    android:textColor="@color/colorText1"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/lbApellidos"
                    app:layout_constraintTop_toTopOf="@id/lbApellidos"
                    android:textColor="@color/endBlueGradient"
                    android:text="@string/lb_affiliate_required_field"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <EditText
                    android:id="@+id/et_Apellidos"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    app:layout_constraintTop_toBottomOf="@id/lbApellidos"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/edit_text_shape"
                    android:hint="@string/et_apellidos"
                    android:textSize="@dimen/_12sp"
                    android:paddingHorizontal="@dimen/_17dp"
                    android:layout_marginTop="@dimen/_6dp"
                    android:inputType="textPersonName"
                    android:elevation="@dimen/_4dp"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>

                <TextView
                    android:id="@+id/lbTipoid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lb_tipo_identificacion"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_Apellidos"
                    android:layout_marginTop="@dimen/_17dp"
                    android:textColor="@color/colorText1"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/lbTipoid"
                    app:layout_constraintTop_toTopOf="@id/lbTipoid"
                    android:textColor="@color/endBlueGradient"
                    android:text="@string/lb_affiliate_required_field"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <Spinner
                    android:id="@+id/sp_tipoId_afiliate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:background="@drawable/spinner_view_shape"
                    android:paddingHorizontal="@dimen/_17dp"
                    android:prompt="@string/et_tipo_identificacion"
                    android:spinnerMode="dropdown"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lbTipoid"
                    android:layout_marginTop="@dimen/_6dp"
                    android:elevation="@dimen/_4dp"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>

                <TextView
                    android:id="@+id/lbNumID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lb_n_identificacion"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sp_tipoId_afiliate"
                    android:layout_marginTop="@dimen/_17dp"
                    android:textColor="@color/colorText1"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/lbNumID"
                    app:layout_constraintTop_toTopOf="@id/lbNumID"
                    android:textColor="@color/endBlueGradient"
                    android:text="@string/lb_affiliate_required_field"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <EditText
                    android:id="@+id/et_NumID"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    app:layout_constraintTop_toBottomOf="@id/lbNumID"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/edit_text_shape"
                    android:hint="@string/et_n_identificacion"
                    android:textSize="@dimen/_12sp"
                    android:paddingHorizontal="@dimen/_17dp"
                    android:layout_marginTop="@dimen/_6dp"
                    android:inputType="number"
                    android:elevation="@dimen/_4dp"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>

                <TextView
                    android:id="@+id/lbFijo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lb_fijo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_NumID"
                    android:layout_marginTop="@dimen/_17dp"
                    android:textColor="@color/colorText1"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/lbFijo"
                    app:layout_constraintTop_toTopOf="@id/lbFijo"
                    android:textColor="@color/endBlueGradient"
                    android:text="@string/lb_affiliate_required_field"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <EditText
                    android:id="@+id/et_telFijo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    app:layout_constraintTop_toBottomOf="@id/lbFijo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/edit_text_shape"
                    android:hint="@string/et_fijo"
                    android:textSize="@dimen/_12sp"
                    android:paddingHorizontal="@dimen/_17dp"
                    android:layout_marginTop="@dimen/_6dp"
                    android:inputType="phone"
                    android:elevation="@dimen/_4dp"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>

                <TextView
                    android:id="@+id/lbCelular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lb_celular"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_telFijo"
                    android:layout_marginTop="@dimen/_17dp"
                    android:textColor="@color/colorText1"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/lbCelular"
                    app:layout_constraintTop_toTopOf="@id/lbCelular"
                    android:textColor="@color/endBlueGradient"
                    android:text="@string/lb_affiliate_required_field"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <EditText
                    android:id="@+id/et_telCelular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    app:layout_constraintTop_toBottomOf="@id/lbCelular"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/edit_text_shape"
                    android:hint="@string/et_celular"
                    android:textSize="@dimen/_12sp"
                    android:paddingHorizontal="@dimen/_17dp"
                    android:layout_marginTop="@dimen/_6dp"
                    android:inputType="phone"
                    android:elevation="@dimen/_4dp"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>

                <TextView
                    android:id="@+id/lbEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lb_email"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_telCelular"
                    android:layout_marginTop="@dimen/_17dp"
                    android:textColor="@color/colorText1"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/lbEmail"
                    app:layout_constraintTop_toTopOf="@id/lbEmail"
                    android:textColor="@color/endBlueGradient"
                    android:text="@string/lb_affiliate_required_field"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    app:layout_constraintTop_toBottomOf="@id/lbEmail"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/edit_text_shape"
                    android:hint="@string/et_email"
                    android:textSize="@dimen/_12sp"
                    android:paddingHorizontal="@dimen/_17dp"
                    android:layout_marginTop="@dimen/_6dp"
                    android:inputType="textEmailAddress"
                    android:elevation="@dimen/_4dp"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>

                <TextView
                    android:id="@+id/lbEmailConf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lb_conf_email"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_email"
                    android:layout_marginTop="@dimen/_17dp"
                    android:textColor="@color/colorText1"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/lbEmailConf"
                    app:layout_constraintTop_toTopOf="@id/lbEmailConf"
                    android:textColor="@color/endBlueGradient"
                    android:text="@string/lb_affiliate_required_field"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <EditText
                    android:id="@+id/et_email_conf"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    app:layout_constraintTop_toBottomOf="@id/lbEmailConf"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/edit_text_shape"
                    android:hint="@string/et_conf_email"
                    android:textSize="@dimen/_12sp"
                    android:paddingHorizontal="@dimen/_17dp"
                    android:layout_marginTop="@dimen/_6dp"
                    android:inputType="textEmailAddress"
                    android:elevation="@dimen/_4dp"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>

                <TextView
                    android:id="@+id/lbCiudad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lb_ciudad"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_email_conf"
                    android:layout_marginTop="@dimen/_17dp"
                    android:textColor="@color/colorText1"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/lbCiudad"
                    app:layout_constraintTop_toTopOf="@id/lbCiudad"
                    android:textColor="@color/endBlueGradient"
                    android:text="@string/lb_affiliate_required_field"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <Spinner
                    android:id="@+id/sp_Ciudad"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:background="@drawable/spinner_view_shape"
                    android:paddingHorizontal="@dimen/_17dp"
                    android:elevation="@dimen/_4dp"
                    android:layout_marginTop="@dimen/_6dp"
                    android:prompt="@string/et_ciudad"
                    android:spinnerMode="dropdown"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lbCiudad"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>

                <TextView
                    android:id="@+id/lbHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lb_hora"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sp_Ciudad"
                    android:layout_marginTop="@dimen/_17dp"
                    android:textColor="@color/colorText1"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/lbHora"
                    app:layout_constraintTop_toTopOf="@id/lbHora"
                    android:textColor="@color/endBlueGradient"
                    android:text="@string/lb_affiliate_required_field"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <Spinner
                    android:id="@+id/sp_Hora"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:background="@drawable/spinner_view_shape"
                    android:paddingHorizontal="@dimen/_17dp"
                    android:elevation="@dimen/_4dp"
                    android:layout_marginTop="@dimen/_6dp"
                    android:prompt="@string/et_hora"
                    android:spinnerMode="dropdown"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lbHora"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>

                <TextView
                    android:id="@+id/lbComentarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lb_comentarios"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sp_Hora"
                    android:layout_marginTop="@dimen/_17dp"
                    android:textColor="@color/colorText1"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/lbComentarios"
                    app:layout_constraintTop_toTopOf="@id/lbComentarios"
                    android:textColor="@color/endBlueGradient"
                    android:text="@string/lb_affiliate_required_field"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <EditText
                    android:id="@+id/et_comentarios"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_92dp"
                    app:layout_constraintTop_toBottomOf="@id/lbComentarios"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/edit_text_shape"
                    android:hint="@string/et_comentarios"
                    android:textSize="@dimen/_12sp"
                    android:paddingHorizontal="@dimen/_17dp"
                    android:inputType="text"
                    android:gravity="top"
                    android:layout_marginTop="@dimen/_13dp"
                    android:elevation="@dimen/_4dp"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>

                <TextView
                    android:id="@+id/lbPrivacyPolicies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lb_privacy_policies"
                    android:textColor="@color/grey_privacy_politic"
                    android:textSize="@dimen/_12sp"
                    android:layout_marginTop="@dimen/_8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_comentarios"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>

                <View
                    android:id="@+id/separador1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:paddingHorizontal="57dp"
                    app:layout_constraintTop_toBottomOf="@id/lbPrivacyPolicies"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginHorizontal="@dimen/_77dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:background="@color/gris_e6"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>
                <TextView
                    android:id="@+id/lbCamposObligatorios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separador1"
                    android:layout_marginTop="@dimen/_8dp"
                    android:textColor="@color/grey_privacy_politic"
                    android:textSize="@dimen/_12sp"
                    android:text="@string/lb_required_files"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>

                <CheckBox
                    android:checked="false"
                    android:id="@+id/cb_AcceptTerms"
                    android:layout_width="@dimen/_28dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/lbAcceeptTerms"
                    app:layout_constraintBottom_toBottomOf="@id/lbAcceeptTerms"
                    android:button="@drawable/checkbox_drawable"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>

                <TextView
                    android:id="@+id/lbAcceeptTerms"
                    android:layout_width="@dimen/_243dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/lbCamposObligatorios"
                    app:layout_constraintLeft_toRightOf="@id/cb_AcceptTerms"
                    android:theme="@style/label_info"
                    android:layout_marginTop="@dimen/_25dp"
                    android:layout_marginStart="@dimen/_43dp"
                    android:text="@string/lb_accept_terms"
                    android:autofillHints="@null"
                    tools:targetApi="o"/>

                <com.google.android.material.button.MaterialButton
                    android:onClick="@{()->viewmodel.verifyForm()}"
                    app:backgroundTint="@color/colorGray"
                    android:id="@+id/btn_affiliate_enviar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cb_AcceptTerms"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:theme="@style/Button1"
                    android:layout_marginTop="@dimen/_17dp"
                    android:layout_marginLeft="@dimen/_17dp"
                    android:layout_marginRight="@dimen/_17dp"
                    app:cornerRadius="@dimen/_20dp"
                    android:text="@string/btn_register_text"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/contentLoadingProgressBar"
            android:clickable="true"
            android:focusable="true"
            android:padding="140dp"
            android:background="@color/white_transparent"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>
</layout>