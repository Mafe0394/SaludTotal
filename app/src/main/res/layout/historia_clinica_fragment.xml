<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        tools:context=".fragments.historiaClinica.HistoriaClinicaFragment">

        <TextView
            android:id="@+id/tv_hist_clin_mensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lab_his_cli_msg"
            android:layout_marginTop="@dimen/_32dp"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/grey_808080"
            android:textStyle="italic"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_11dp"
            android:layout_marginEnd="@dimen/_11dp"
            android:paddingBottom="@dimen/_8dp">
            <ImageView
                android:contentDescription="@null"
                android:id="@+id/iv_user_logo_hc"
                android:layout_width="@dimen/_14dp"
                android:layout_height="@dimen/_16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_paciente_hc"
                app:layout_constraintBottom_toBottomOf="@id/tv_paciente_hc"
                app:srcCompat="@drawable/ic_st_general_usuario"                />
            <TextView
                android:id="@+id/tv_paciente_hc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_user_logo_hc"
                android:layout_marginStart="@dimen/_9dp"
                android:layout_marginTop="@dimen/_8dp"
                android:textColor="@color/colorText1"
                android:text="@string/lb_paciente"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_paciente_hc"
                app:layout_constraintStart_toEndOf="@id/tv_paciente_hc"
                app:layout_constraintBottom_toBottomOf="@id/tv_paciente_hc"
                android:layout_marginStart="@dimen/_2dp"
                android:layout_marginBottom="@dimen/_2dp"
                android:textColor="@color/endBlueGradient"
                android:text="@string/lb_affiliate_required_field"/>
            <TextView
                android:id="@+id/tv_user_name_hc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_paciente_hc"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_9dp"
                android:layout_marginTop="@dimen/_5dp"
                android:text="@string/nombre_muestra"/>

            <ImageView
                android:contentDescription="@null"
                android:id="@+id/iv_especialidad_medica_hc"
                android:layout_width="@dimen/_14dp"
                android:layout_height="@dimen/_16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_especialidad_medica_hc"
                app:layout_constraintBottom_toBottomOf="@id/tv_especialidad_medica_hc"
                app:srcCompat="@drawable/ic_st_general_especialidad_medico"/>
            <TextView
                android:id="@+id/tv_especialidad_medica_hc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_user_name_hc"
                app:layout_constraintStart_toEndOf="@id/iv_especialidad_medica_hc"
                android:layout_marginStart="@dimen/_9dp"
                android:layout_marginTop="@dimen/_21dp"
                android:textColor="@color/colorText1"
                android:text="@string/lb_especialidad"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_especialidad_medica_hc"
                app:layout_constraintStart_toEndOf="@id/tv_especialidad_medica_hc"
                app:layout_constraintBottom_toBottomOf="@id/tv_especialidad_medica_hc"
                android:layout_marginStart="@dimen/_2dp"
                android:layout_marginBottom="@dimen/_2dp"
                android:textColor="@color/endBlueGradient"
                android:text="@string/lb_affiliate_required_field"/>
            <Spinner
                android:id="@+id/sp_especialidad_medica_hc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_view_shape"
                android:minHeight="@dimen/_40dp"
                android:elevation="@dimen/_4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_especialidad_medica_hc"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_9dp"
                android:layout_marginEnd="@dimen/_9dp"
                android:layout_marginTop="@dimen/_12dp"/>

            <ImageView
                android:contentDescription="@null"
                android:id="@+id/iv_anho_consulta_hc"
                android:layout_width="@dimen/_14dp"
                android:layout_height="@dimen/_16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_anho_consulta"
                app:layout_constraintBottom_toBottomOf="@id/tv_anho_consulta"
                app:srcCompat="@drawable/ic_st_general_fecha_azul"/>
            <TextView
                android:id="@+id/tv_anho_consulta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/sp_especialidad_medica_hc"
                app:layout_constraintStart_toEndOf="@id/iv_anho_consulta_hc"
                android:layout_marginStart="@dimen/_9dp"
                android:layout_marginTop="@dimen/_21dp"
                android:textColor="@color/colorText1"
                android:text="@string/lb_anho_consulta"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_anho_consulta"
                app:layout_constraintStart_toEndOf="@id/tv_anho_consulta"
                app:layout_constraintBottom_toBottomOf="@id/tv_anho_consulta"
                android:layout_marginStart="@dimen/_2dp"
                android:layout_marginBottom="@dimen/_2dp"
                android:textColor="@color/endBlueGradient"
                android:text="@string/lb_affiliate_required_field"/>
            <Spinner
                android:id="@+id/cal_anho_consulta_hc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/calendar_shape"
                android:minHeight="@dimen/_40dp"
                android:elevation="@dimen/_4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_anho_consulta"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_9dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginEnd="@dimen/_9dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_hc_consultar"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/_250dp"
                android:layout_height="wrap_content"
                style="@style/Button1"
                app:cornerRadius="@dimen/_20dp"
                app:backgroundTint="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/_25dp"
                android:text="@string/btn_consultar"
                android:onClick="onClick"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>